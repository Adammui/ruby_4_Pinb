<p id="notice"><%= notice %></p>

<h1>Users</h1>
<% if can? :create, User %>
  <p><%= link_to 'New User', new_user_path %></p>
<%end %>
<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>ROLE</th>
      <th>Full name</th>
      <th>Birthday</th>
      <th>Email</th>
      <th>Adress</th>
      <th>State</th>
      <th>City</th>
      <th>Country</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.role.name %></td>
        <td><%= user.full_name %></td>
        <td><%= user.birthday %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <% if can? :update, user %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>
