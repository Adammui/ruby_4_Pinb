<p id="notice"><%= notice %></p>

<h1>Advertisements</h1>
<p><%= link_to 'New Adv', new_advertisement_path %>
</p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Text</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td>
          <% @users.each do |u| %>
            <% if u.id == advertisement.user_id %>
              <%= u.login %>
            <% end %>
          <% end %>
        </td>
        <td><%= advertisement.text %></td>
        <td><%= image_tag(advertisement.image_url.to_s) %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

